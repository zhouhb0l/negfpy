    "min_success_fraction": 0.7,
    "max_channel_factor": 1.5,
    "nonnegative_tolerance": 1e-08,
    "collect_rejected": false,
    "max_eta_over_omega": null,
    "eta_ratio_cm1_min": null,
    "omega_scale_mode": "none"
  },
  "dos": {
    "normalize_per_mode": false,
    "negative_tolerance": 1e-12
  },
  "dispersion": {
    "kpar": [
      0.0,
      0.0
    ],
    "kx_min": 0.0,
    "kx_max": 3.141592653589793,
    "n_kx": 240,
    "negative_tolerance": 1e-8,
    "allow_unstable": false
  }
