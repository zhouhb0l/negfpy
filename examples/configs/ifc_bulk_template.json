{
  "run": {
    "name": "bulk_transport_run",
    "calculation": "transmission",
    "output_dir": "outputs/bulk_ifc_runs",
    "output_mode": "flat",
    "studies_root": "studies",
    "study": "bulk_study",
    "material": "material",
    "timestamped_run_dir": true,
    "write_input_snapshot": true,
