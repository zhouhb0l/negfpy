{
  "run": {
    "name": "graphene_bulk_transmission_test",
    "calculation": "transmission",
    "output_dir": "outputs/bulk_ifc_runs",
    "write_plot": true,
    "write_data": true,
    "write_report": true,
    "x_unit": "cm-1"
  },
  "ifc": {
    "path": "graphene.fc",
    "left_path": "graphene.fc",
    "center_path": "graphene.fc",
    "right_path": "graphene.fc",
    "reader": "qe",
    "enforce_asr": true,
    "dy_cutoff": null,
    "dz_cutoff": null
  },
  "model": {
    "n_layers": 40,
    "principal_layer_size": 4,
    "auto_principal_layer_enlargement": true,
    "infer_fc01_from_negative_dx": true,
    "enforce_hermitian_fc00": true,
    "onsite_pinning": 0.0
  },
  "kmesh": {
    "dimension": 1,
    "mode": "shifted",
    "nk": 24,
    "nky": 24,
    "nk_low": 24,
    "nky_low": 24,
    "low_cm1": 200.0
  },
  "omega": {
    "min": 0.0,
    "max": null,
    "n_points": 80,
    "auto_max": false,
    "fmax_cm1": 1700.0,
    "fmax_thz": null,
    "auto_sample_nk": 12,
    "safety_factor": 1.02
  },
  "solver": {
    "surface_gf_method": "generalized_eigen_svd",
    "eta_scheme": "adaptive",
    "eta_fixed": 0.0001,
    "eta_values": [1e-8, 1e-7, 1e-6, 1e-5, 1e-4],
    "min_success_fraction": 0.7,
    "max_channel_factor": 1.5,
    "nonnegative_tolerance": 1e-8,
    "collect_rejected": false,
    "max_eta_over_omega": null,
    "eta_ratio_cm1_min": null,
    "omega_scale_mode": "none"
  },
  "dos": {
    "normalize_per_mode": false,
    "negative_tolerance": 1e-12
  },
  "dispersion": {
    "kpar": [0.0],
    "kx_min": 0.0,
    "kx_max": 3.141592653589793,
    "n_kx": 240,
    "negative_tolerance": 1e-8,
    "allow_unstable": false
  }
}
